{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es2018"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
